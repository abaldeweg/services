name: Test <%= name %>

on:
  push:
    branches:
      - main
    paths:
      - "apps/<%= name %>/**"
      - ".github/workflows/tests_apps_<%= name %>.yaml"
  pull_request:
    branches:
      - main
    paths:
      - "apps/<%= name %>/**"
      - ".github/workflows/tests_apps_<%= name %>.yaml"

permissions:
    contents: read

jobs:
  unit:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v5
      - uses: actions/setup-node@v5
        with:
          node-version: 24
      - name: Install pnpm
        run: npm install -g pnpm
      - name: Install dependencies
        run: pnpm install
      - name: Run tests
        run: pnpm -F <%= name %> test
