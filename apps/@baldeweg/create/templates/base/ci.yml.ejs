name: CI

on:
    push:
        branches:
            - main
    pull_request:
        branches:
            - main
    workflow_dispatch:

permissions:
    contents: read

jobs:
    knip:
        runs-on: ubuntu-latest
        steps:
            - name: Checkout
              uses: actions/checkout@v4
            - name: Setup Node.js
              uses: actions/setup-node@v4
              with:
                  node-version: 24
            - name: Install pnpm
              run: npm install -g pnpm
            - name: Install dependencies
              run: pnpm install --frozen-lockfile
            - name: Run knip
              run: pnpm knip
    eslint:
        runs-on: ubuntu-latest
        steps:
            - name: Checkout
              uses: actions/checkout@v4
            - name: Setup Node.js
              uses: actions/setup-node@v4
              with:
                  node-version: 24
            - name: Install pnpm
              run: npm install -g pnpm
            - name: Install dependencies
              run: pnpm install --frozen-lockfile
            - name: Run eslint
              run: pnpm lint
